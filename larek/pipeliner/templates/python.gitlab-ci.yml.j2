# GitLab CI Pipeline for {{ service.name }}
# Language: Python {{ python_version }}

stages:
{% for stage in stages %}
  - {{ stage }}
{% endfor %}

variables:
  PYTHON_VERSION: "{{ python_version }}"
  PIP_CACHE_DIR: "${CI_PROJECT_DIR}/.cache/pip"
{% if has_dockerfiles %}
  NEXUS_REGISTRY: "${NEXUS_REGISTRY:-localhost:8081}"
  NEXUS_USER: "${NEXUS_USER:-admin}"
  NEXUS_PASSWORD: "${NEXUS_PASSWORD}"
{% endif %}

.python-cache: &python-cache
  cache:
    key: "${CI_COMMIT_REF_SLUG}-python"
    paths:
      - .cache/pip/
      - .venv/

{% if package_manager == 'poetry' %}
.poetry-setup: &poetry-setup
  before_script:
    - pip install poetry
    - poetry config virtualenvs.in-project true
    - {{ install_command }}
{% endif %}

lint:
  stage: lint
  image: python:{{ python_version }}-slim
  <<: *python-cache
{% if package_manager == 'poetry' %}
  <<: *poetry-setup
{% else %}
  before_script:
    - pip install ruff mypy
    - {{ install_command }}
{% endif %}
  script:
    - {{ lint_command }}
  allow_failure: true
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == $CI_DEFAULT_BRANCH

format:
  stage: lint
  image: python:{{ python_version }}-slim
  <<: *python-cache
{% if package_manager == 'poetry' %}
  <<: *poetry-setup
{% else %}
  before_script:
    - pip install ruff black
    - {{ install_command }}
{% endif %}
  script:
    - {{ format_command }}
  allow_failure: true
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == $CI_DEFAULT_BRANCH

{% if has_test %}
test:
  stage: test
  image: python:{{ python_version }}-slim
  <<: *python-cache
{% if package_manager == 'poetry' %}
  <<: *poetry-setup
{% else %}
  before_script:
    - pip install pytest pytest-cov
    - {{ install_command }}
{% endif %}
  script:
    - {{ test_command }}
  coverage: '/TOTAL.*\s+(\d+%)$/'
  artifacts:
    reports:
      junit: report.xml
      coverage_report:
        coverage_format: cobertura
        path: coverage.xml
    when: always
  rules:
    - if: $CI_PIPELINE_SOURCE == "merge_request_event"
    - if: $CI_COMMIT_BRANCH == $CI_DEFAULT_BRANCH
{% endif %}

{% include '_docker.gitlab-ci.yml.j2' %}
